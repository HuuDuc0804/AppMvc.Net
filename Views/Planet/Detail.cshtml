@model App.Models.PlanetModel
<h1>@Model.Name</h1>

<div class="card w-30">
    <img class="card-img-top" src="~/planet/@(Model.Name).jpg" alt="">
    <div class="card-body">
        <h5>@Model.NameVN</h5>
        <div class="card-text">
            @Model.Content
        </div>
        <a asp-action="Index" class="card-link">
            Các hành tinh
        </a>
    </div>
</div>
@Url.RouteUrl("Uranus")