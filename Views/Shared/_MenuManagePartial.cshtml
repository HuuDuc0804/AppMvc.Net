@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService

@{
    var result = await authorizationService.AuthorizeAsync(this.User, "ViewManageMenu");
}
@if (result.Succeeded)
{
    <div class="dropdown">
        <button class="btn btn-outline-danger dropdown-toggle" type="button" id="managedropdownmenu" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Manage
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="managedropdownmenu">
            <a asp-action="Index" asp-controller="DbManage" class="dropdown-item" asp-area="Database">
                Database
            </a>
            <a asp-action="Index" asp-controller="Contact" class="dropdown-item" asp-area="Contact">
                Quản lý liên hệ
            </a>
            <a asp-action="Index" asp-controller="Role" class="dropdown-item" asp-area="Identity">
                Quản lý vai trò
            </a>
            <a asp-action="Index" asp-controller="User" class="dropdown-item" asp-area="Identity">
                Quản lý user
            </a>
        </div>
    </div>
}
